<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
   >

    <LinearLayout style="@style/TitleBar">

        <include layout="@layout/same_titlebar" />

        <LinearLayout style="@style/Linear_titles">

            <RelativeLayout
                style="@style/RelativeLayout_img"
                android:onClick="onHomeClick">

                <ImageView
                    style="@style/linear_img"
                    android:src="@mipmap/header_back" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/type_select"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_textsize" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sby_typepage_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:lines="3"
            android:text="@string/insure_page_insuretype"
            android:textSize="@dimen/mian_userdata_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/sby_typepage_persional"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.71"
                android:background="@android:color/white"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/personal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/personal"
                    android:textSize="@dimen/mian_userdata_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sby_typepage_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_weight="0.71"
                android:background="@color/white"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/company" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/company"
                    android:textSize="@dimen/mian_userdata_size" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
